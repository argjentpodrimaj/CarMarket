<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".activities.KrijoShpalljeForm"
    android:background="@drawable/background">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fontFamily="serif"
        android:text="Krijo Shpallje"
        android:textAlignment="center"
        android:textSize="25dp"
        android:layout_marginVertical="15dp"/>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <EditText
                android:id="@+id/etTitulliShpallje"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Titulli"
                android:textColorHint="#FFFFFF"

                android:padding="7dp"
                android:layout_marginHorizontal="45dp"/>

            <EditText
                android:id="@+id/etViti"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Viti"
                android:textColorHint="#FFFFFF"

                android:padding="7dp"
                android:layout_marginHorizontal="45dp"/>


            <EditText
                android:id="@+id/etKilometrazha"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Kilometrazha"
                android:textColorHint="#FFFFFF"

                android:padding="7dp"
                android:layout_marginHorizontal="45dp"
                android:layout_marginVertical="5dp"/>

            <EditText
                android:id="@+id/etTransmetuesi"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Transmetuesi"
                android:textColorHint="#FFFFFF"

                android:padding="7dp"
                android:layout_marginHorizontal="45dp"/>

            <EditText
                android:id="@+id/etKarburanti"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Karburanti"
                android:textColorHint="#FFFFFF"

                android:padding="7dp"
                android:layout_marginHorizontal="45dp"
                android:layout_marginVertical="5dp"/>

            <EditText
                android:id="@+id/etNgjyra"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Ngjyra"
                android:textColorHint="#FFFFFF"

                android:padding="7dp"
                android:layout_marginHorizontal="45dp"/>

            <EditText
                android:id="@+id/etStruktura"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Struktura"
                android:textColorHint="#FFFFFF"

                android:padding="7dp"
                android:layout_marginHorizontal="45dp"
                android:layout_marginVertical="5dp"
                />


            <EditText
                android:id="@+id/etKomuna"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Komuna"
                android:textColorHint="#FFFFFF"

                android:padding="7dp"
                android:layout_marginHorizontal="45dp"/>

            <EditText
                android:id="@+id/etTel"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Telefoni"
                android:textColorHint="#FFFFFF"

                android:padding="7dp"
                android:layout_marginHorizontal="45dp"
                android:layout_marginVertical="5dp"/>

            <EditText
                android:id="@+id/etPershkrimi"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Pershkrimi"
                android:textColorHint="#FFFFFF"

                android:padding="7dp"
                android:layout_marginHorizontal="45dp"/>


            <Spinner
                android:id="@+id/spinner"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="7dp"
                android:layout_marginHorizontal="45dp"/>

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center">


                <ImageView
                    android:id="@+id/ivUploadFoto"
                    android:layout_width="180dp"
                    android:layout_height="100dp"
                     />

                <Button
                    android:id="@+id/btnUpload"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_toRightOf="@id/ivUploadFoto"
                    android:layout_centerVertical="true"
                    android:text="Upload"
                    android:background="@drawable/button_background"
                    />

            </RelativeLayout>

            <Button
                android:id="@+id/btnKrijoShpallje"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="Krijo"
                android:background="@drawable/button_background"
                android:layout_marginHorizontal="50dp"/>


        </LinearLayout>

    </ScrollView>


</LinearLayout>